{
  "uid": "docker-prometheus-exporter",
  "title": "Docker Containers Health",
  "id": null,
  "editable": true,
  "timezone": "browser",
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Docker Daemon Status",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 0 },
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "docker_up",
          "legendFormat": "Docker"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "Offline", "color": "red" }, "1": { "text": "Online", "color": "green" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "red" },
              { "value": 1, "color": "green" }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "textMode": "value"
      }
    },
    {
      "id": 2,
      "title": "Docker Daemon Uptime",
      "type": "timeseries",
      "gridPos": { "h": 4, "w": 20, "x": 4, "y": 0 },
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "docker_up",
          "legendFormat": "docker_up"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "red" },
              { "value": 1, "color": "green" }
            ]
          },
          "custom": {
            "fillOpacity": 20,
            "lineWidth": 2,
            "drawStyle": "line",
            "showPoints": "never"
          }
        },
        "overrides": []
      }
    },
    {
      "id": 3,
      "title": "Container Health Status",
      "type": "table",
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 4 },
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "container_health",
          "format": "table",
          "instant": true,
          "legendFormat": ""
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": { "Time": true, "__name__": true, "id": true, "job": true, "instance": true },
            "renameByName": { "name": "Container", "Value": "Health" }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {},
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Health" },
            "properties": [
              {
                "id": "mappings",
                "value": [
                  { "type": "value", "options": { "0": { "text": "No Healthcheck", "color": "text" }, "1": { "text": "Starting", "color": "yellow" }, "2": { "text": "Healthy", "color": "green" }, "3": { "text": "Unhealthy", "color": "red" } } }
                ]
              },
              {
                "id": "custom.cellOptions",
                "value": { "type": "color-background", "mode": "basic" }
              }
            ]
          }
        ]
      },
      "options": {
        "sortBy": [{ "displayName": "Container", "desc": false }]
      }
    },
    {
      "id": 4,
      "title": "Containers Healthy",
      "type": "stat",
      "gridPos": { "h": 4, "w": 8, "x": 0, "y": 16 },
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "count(container_health == 2) OR vector(0)",
          "legendFormat": "Healthy"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "green", "mode": "fixed" }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "textMode": "value"
      }
    },
    {
      "id": 5,
      "title": "Containers Unhealthy",
      "type": "stat",
      "gridPos": { "h": 4, "w": 8, "x": 8, "y": 16 },
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "count(container_health == 3) OR vector(0)",
          "legendFormat": "Unhealthy"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "red", "mode": "fixed" }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "textMode": "value"
      }
    },
    {
      "id": 6,
      "title": "Containers No Healthcheck",
      "type": "stat",
      "gridPos": { "h": 4, "w": 8, "x": 16, "y": 16 },
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "count(container_health == 0) OR vector(0)",
          "legendFormat": "No Healthcheck"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "text", "mode": "fixed" }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "textMode": "value"
      }
    },
    {
      "id": 7,
      "title": "Container Health History",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 20 },
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "container_health",
          "legendFormat": "{{ name }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 3,
          "mappings": [
            { "type": "value", "options": { "0": { "text": "No Healthcheck" }, "1": { "text": "Starting" }, "2": { "text": "Healthy" }, "3": { "text": "Unhealthy" } } }
          ],
          "custom": {
            "fillOpacity": 10,
            "lineWidth": 2,
            "drawStyle": "line",
            "showPoints": "never",
            "stacking": { "mode": "none" }
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "right" },
        "tooltip": { "mode": "multi" }
      }
    }
  ],
  "schemaVersion": 39,
  "tags": ["docker"],
  "templating": { "list": [] },
  "annotations": { "list": [] }
}
